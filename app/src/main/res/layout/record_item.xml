<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="64dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/ic_menu_gallery"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textViewMoney"
        android:layout_width="70dp"
        android:layout_height="17dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="300000"
        app:layout_constraintLeft_toRightOf="@+id/textViewPrice"
        app:layout_constraintTop_toBottomOf="@+id/textViewOrigin" />

    <TextView
        android:id="@+id/textViewOrigin"
        android:layout_width="145dp"
        android:layout_height="17dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDestination"
        android:layout_width="145dp"
        android:layout_height="17dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/textViewTo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="0dp"
        android:text="Phạm Hoài Nguyên"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="2dp"
        android:text="Giá: "
        app:layout_constraintLeft_toRightOf="@+id/textViewVehicle"
        app:layout_constraintTop_toBottomOf="@+id/textViewOrigin" />

    <TextView
        android:id="@+id/textViewTo"
        android:layout_width="24dp"
        android:layout_height="17dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:text="đến"
        app:layout_constraintLeft_toRightOf="@+id/textViewOrigin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewVehicle"
        android:layout_width="70dp"
        android:layout_height="17dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textViewOrigin" />

    <TextView
        android:id="@+id/textViewPriceUnit"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:text="VNĐ/Chỗ"
        app:layout_constraintLeft_toRightOf="@+id/textViewMoney"
        app:layout_constraintTop_toBottomOf="@+id/textViewDestination" />

    <TextView
        android:id="@+id/textViewLabelTimeStart"
        android:layout_width="68dp"
        android:layout_height="17dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:text="Khởi hành: "
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textViewVehicle" />

    <TextView
        android:id="@+id/textViewTimeStart"
        android:layout_width="112dp"
        android:layout_height="17dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:text="14:30 22-05-2017"
        app:layout_constraintLeft_toRightOf="@+id/textViewLabelTimeStart"
        app:layout_constraintTop_toBottomOf="@+id/textViewPrice" />

    <TextView
        android:id="@+id/textViewSeat"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="2dp"
        android:text="10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPriceUnit" />

    <TextView
        android:id="@+id/textViewLabelSeat"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:text="Chỗ"
        app:layout_constraintLeft_toRightOf="@+id/textViewSeat"
        app:layout_constraintTop_toBottomOf="@+id/textViewPriceUnit" />

</android.support.constraint.ConstraintLayout>